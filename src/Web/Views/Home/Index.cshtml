@model HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}


<form>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control" onchange="this.form.submit()" >
                </select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="BrandId">Brands</label>
                <select asp-for="BrandId" asp-items="Model.Brands" class="form-control" onchange="this.form.submit()">
                </select>
            </div>
        </div>
    </div>
</form>

<div class="row">

    @foreach (var product in Model.Products)
    {

        <partial name="_ProductPartial" model="product"/>
    }
</div>

<div>
    toplam sayfa adeti: @Model.PaginationInfo.TotalPages <br /> 
    şuanki sayfa: @Model.PaginationInfo.ActualPage <br /> 
    toplam öge adeti: @Model.PaginationInfo.TotalItems <br /> 
    bu sayfadaki öge adeti: @Model.PaginationInfo.ItemsOnPage <br /> 

</div>